@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<center><h2>University of Cincinnati Carl H. Lindner College of Business</h2></center>
</div>


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
	<!-- Indicators -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="2" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="3" class="active"></li>
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner">
		<div class="item active">
			<img src="~/Content/Images/2.jpg" alt="UC">
		</div>

		<div class="item">
			<img src="~/Content/Images/4.jpg" alt="UC">
		</div>

		<div class="item">
			<img src="~/Content/Images/7.jpg" alt="UC">
		</div>

		<div class="item">
			<img src="~/Content/Images/9.jpg" alt="UC">
		</div>
	</div>

	<!-- Left and right controls -->
	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

<div class="row">
	<div class="col-md-4">
		<h2>Students</h2>
		<p>Current students and alumni</p>
		<p>@Html.ActionLink("Add, Edit, Details", "Create", "StudentAlums", null, new { @class = "btn btn-danger" })</p>
	</div>
	<div class="col-md-4">
		<h2>Work Histories</h2>
		<p>Work history of students and alumni</p>
		<p>@Html.ActionLink("Add, Edit, Details", "Index", "WorkHistories", null, new { @class = "btn btn-danger" })</p>
	</div>
	<div class="col-md-4">
		<h2>Interviews</h2>
		<p>Job interviews of current students</p>
		<p>@Html.ActionLink("Add, Edit, Details", "Index", "Interviews", null, new { @class = "btn btn-danger" })</p>
	</div>
</div>
